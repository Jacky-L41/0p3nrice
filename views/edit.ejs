    <section style="padding-top: 90px;padding-left: 28px;padding-right: 28px;">
        <div>
            <form class="bootstrap-form-with-validation" action="/edit" method="post" enctype="multipart/form-data">
                <h2 class="text-center">Edit Restaurant</h2>
                <input name="_id" value="<%= aRestaurant._id %>" type="hidden">
                <input name="create_by" value="<%= aRestaurant.create_by %>" type="hidden">
                <div class="form-group"><label for="text-input">Name:</label><input class="form-control" type="text" id="name" name="name" required value="<%= aRestaurant.name %>"></div>
                <div class="form-group"><label for="text-input">Borough:</label><input class="form-control" type="text" id="borough" name="borough" value="<%= aRestaurant.borough %>"></div>
                <div class="form-group"><label for="text-input">Cuisine</label><input class="form-control" type="text" id="cuisine" name="cuisine" value="<%= aRestaurant.cuisine %>"></div>
                <div class="form-group"><label for="text-input">Street</label><input class="form-control" type="text" id="street" name="street" value="<%= aRestaurant.address.street %>"></div>
                <div class="form-group"><label for="text-input">Building:</label><input class="form-control" type="text" id="building" name="building" value="<%= aRestaurant.address.building %>"></div>
                <div class="form-group"><label for="text-input">Zipcode:</label><input class="form-control" type="text" id="zipcode" name="zipcode" value="<%= aRestaurant.address.zipcode %>"></div>
                <div class="form-group"><label for="text-input">GPS coordinate (longitude):</label><input class="form-control" type="text" id="coord_lon" name="coord_lon" name="coord_lon" value="<%= aRestaurant.address.coord.lon %>"></div>
                <div class="form-group"><label for="text-input">GPS coordinate (latitude):</label><input class="form-control" type="text" id="coord_lat" name="coord_lat" value="<%= aRestaurant.address.coord.lat %>"></div>
                <div class="form-group"><label for="text-input">Owner:</label><input class="form-control" type="text" id="owner" name="owner" required value="<%= aRestaurant.owner %>"></div>
                <div class="form-group"><label for="file-input">Photo:&nbsp; &nbsp;</label><input type="file" id="photo" name="photo"></div>
                <div class="form-group d-xl-flex justify-content-xl-start"><button class="btn btn-primary bg-dark border-dark" type="submit" style="margin-right: 20px;">Edit</button></div>
            </form>
            <div class="form-group d-xl-flex justify-content-xl-start"><button class="btn btn-primary bg-dark border-dark" style="margin-right: 20px;" onclick="location.href='/'">Back To Home Page</button></div>
        </div>
